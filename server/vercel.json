{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/MediaConnect/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/MediaConnect/dist",  
                "buildCommand": "npm run build",
                "devCommand": "npm run dev",
                "outputDirectory": "dist"
            }
        }
    ],
    "routes": [
        {            "src": "/(.*)",
            "dest": "server/index.js"
        },
        {            "src": "/media/(.*)",
            "dest": "client/MediaConnect/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "DATABASE_URL": "@database_url",  
        "JWT_SECRET": "@jwt_secret"  
    },
    "alias": "mediaconnect-app" 
}